class Employee:
    def __init__(self, name, base_salary):
        self.name = name
        self._base_salary = base_salary   # Protected attribute

    def calculate_salary(self):
        return self._base_salary


# Regular Employee (gets bonus)
class RegularEmployee(Employee):
    def __init__(self, name, base_salary, bonus):
        super().__init__(name, base_salary)
        self.bonus = bonus

    def calculate_salary(self):
        return self._base_salary + self.bonus


# Contract Employee (paid hourly)
class ContractEmployee(Employee):
    def __init__(self, name, hourly_rate, hours_worked):
        super().__init__(name, 0)
        self.hourly_rate = hourly_rate
        self.hours_worked = hours_worked

    def calculate_salary(self):
        return self.hourly_rate * self.hours_worked


# Manager (gets bonus + allowance)
class Manager(Employee):
    def __init__(self, name, base_salary, bonus, allowance):
        super().__init__(name, base_salary)
        self.bonus = bonus
        self.allowance = allowance

    def calculate_salary(self):
        return self._base_salary + self.bonus + self.allowance


# ----------------------------
# Real example 
# ----------------------------

employees = [
    RegularEmployee("Sanika", 60000, 5000),
    ContractEmployee("pratahmesh", 700, 120),
    Manager("mrunmayee", 90000, 10000, 15000)
]

for emp in employees:
    print(f"{emp.name} Salary: {emp.calculate_salary()}")
